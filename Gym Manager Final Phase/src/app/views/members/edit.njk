{% extends 'layout.njk' %}

{% block content %}
    
     <form class="card" method="POST" action="/members?_method=PUT">

        <section class="avatar" style="background:url({{member.avatar_url}}) no-repeat center center /cover">
        </section>

        <section class="details">
            

            <h3>Edit Member</h3>

            {% include "members/fields.njk" %}

            <input 
                type="hidden" 
                name="id" 
                value="{{member.id}}">      

            </form>

            <form id="form-delete" method="POST" action="/members?_method=DELETE">
                <input 
                type="hidden" 
                name="id" 
                value="{{member.id}}"/>
                
                <button type="submit">Delete</button>
            
            </form> 

       {% include "resource_deletion/confirm.njk" %}

       </section>

      
    
{% endblock content %}