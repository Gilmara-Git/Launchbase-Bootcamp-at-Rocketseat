{% extends 'layout.njk' %}

{% block content %}
    
    <form class="card">

        <section class="avatar" style="background: url({{ instructor.avatar_url }}) no-repeat center center /cover">
        </section>

        <section class="details">

            <h3>Details</h3>

            <div class="item">
                <div>Instructor</div>
                <div>{{instructor.name}}</div>
            </div>

            <div class="item">
                <div>Birthday</div>
                <div>{{instructor.dob}}</div> 
            </div>

            <div class="item">
                <div>Gender</div>
                <div>{{"Masculino" if instructor.gender == "M" else "Feminino"}}</div>
                
            </div>

            <div class="item">
                <div>Follow ups</div>

                <div>
                    {% for service in instructor.services %}
                    <span>{{service}}</span>                    
                    {% endfor %}
                </div>

            </div>

            <div class="item">
                <div>Since</div>
                <div>{{instructor.created_at}}</div>
            </div>

            <a href="/instructors/{{instructor.id}}/edit" class="button">Edit</a>

        </section>

    </form>

{% endblock content %}