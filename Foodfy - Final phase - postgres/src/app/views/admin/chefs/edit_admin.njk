{% extends "layout.njk" %}

{% block title %}
    <title>Edit chefs</title>
{% endblock %}

{% block header %}
    <div class="header-foodfy-admin">
        <img id="logo-foodfy-admin" src="/assets/logo_admin.png" alt="Logo Foodfy Admin">
        <a id="recipes" href="/receitas">Recipes</a>
        <a id="chefs" href="/admin/chefs">Chefs</a>
    </div>
{% endblock %}

{% block content %}
   
    <div id="manage-chefs-edit">
        <h2>Editing a chef</h2>
        <div id="links">
            <button id="delete" type="submit" form="delete-chef">Delete chef</button>
            <button id="save" type="submit" form="edit-chef">Save chef</button>
        </div>
    </div>

    <form id="edit-chef" class="create-chef" method="POST" action="/admin/chefs?_method=PUT">

        {% include "admin/chefs/fields.njk" %}

        <input type="hidden" name="id" value="{{chef.id}}">
        
    </form>

    <form id="delete-chef" method="POST" action="/admin/chefs?_method=DELETE">
        <input type="hidden" name="id" value="{{chef.id}}">

    </form>

        {% include "resource_deletion/confirm.njk" %}

</div>

{% endblock %}

{% block footer%}{% endblock %}