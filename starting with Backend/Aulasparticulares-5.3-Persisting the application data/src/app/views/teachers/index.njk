{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">

        <div class="header">
            <a href="teachers/create">New</a>
            
            <form method="GET" action="/teachers">
            
            <input type="text" name="filter"
            placeholder="Search by teacher or subjects"
            value={{filter}}>
            
            <button type="submit">Filter</button>

            </form>

        </div>
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Teacher Name</th>
                    <th>Subjects</th>
                    <th>Students</th>
                    <th>Action</th>
                </tr>   
            </thead>

            <tbody>
                {% for teacher in teachers %}
                <tr>
                    <td><span style="background-image: url({{teacher.avatar_url}})"></span>{{teacher.name}}</td>
                   
                    <td>
                     {% for subject in teacher.subjects %}
                         <span>{{subject}}</span>
                     {% endfor %}
                    </td>

                    <td>{{teacher.total_students}}</td>
                   
                    <td><a href="/teachers/{{teacher.id}}">View</a></td>
                </tr>
                    {% endfor %}          
            </tbody>


        </table>


    </div>

{% endblock content %}