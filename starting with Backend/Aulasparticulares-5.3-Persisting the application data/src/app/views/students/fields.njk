  <div class="item">
            <div id="top-item">Avatar url</div>
            <div>
                <input type="url" placeholder="http://photo-address"
                       name="avatar_url"
                       value="{{student.avatar_url}}" required/> 
                       
                </div>
        </div>

        <div class="item">
            <div>Name</div>
            <div>
                <input type="text" placeholder="Full name"
                       name="name"
                       value="{{student.name}}" required/>
            </div>
        </div>
        
        
        <div class="item">
            <div>Email</div>
            <div>
                <input type="email"
                       name="email"
                       value="{{student.email}}" required/>
            </div>
        </div>


    <div class="item">
            <div>Date of birth</div>

            <div>
                <input type="date" 
                       name="dob"
                       value="{{student.dob}}" required/>
            </div>
     </div>       

<div class="item">
            <div>Current school year</div>
                <select name="grade" required>
                    <optgroup label="Elementary School">
                        <option value="5"{% if student.grade == "5th"%} selected {% endif %}>5th Grade</option>
                    </optgroup>

                    <optgroup label="Middle School">
                        <option value="6"{% if student.grade == "6th"%} selected {% endif %}>6th Grade</option>
                        <option value="7"{% if student.grade == "7th"%} selected {% endif %}>7th Grade</option>
                        <option value="8"{% if student.grade == "8th"%} selected {% endif %}>8th Grade</option>
                    </optgroup>

                    <optgroup label="High School">
                        <option value="9"{% if student.grade == "9th"%} selected {% endif %}>9th Grade</option>
                        <option value="10"{% if student.grade == "10th"%} selected {% endif %}>10th Grade</option>
                        <option value="11"{% if student.grade == "11th"%} selected {% endif %}>11th Grade</option>
                        <option value="12"{% if student.grade == "12th"%} selected {% endif %}>12th Grade</option>
                    </optgroup>

                </select>           
     </div>  

<div class="item">

            <div>Individual classes(weekly hours)</div>
                <div>
                    <input type="number" min="1" max="40"
                    name="hours_classes" 
                    placeholder="Hours per week" 
                    value="{{student.hours_classes}}"
                    required/>     
                </div>
            
</div>  


<div class="item">
    <div>My Teacher</div>
        <div>
            <select name="teacher">
                {% for teacher in teacherOptions %}  

                <option value="{{teacher.id}}"{% if teacher.id == student.teacher_id %} selected
                {% endif %}>{{teacher.name}}</option>

                {% endfor %}
            </select>
        </div>


</div>
     
            <button type="submit">Save</button>