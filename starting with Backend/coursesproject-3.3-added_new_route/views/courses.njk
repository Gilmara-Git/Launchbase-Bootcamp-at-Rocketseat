
    {% extends "layout.njk" %}
        
    {% block title %} 
        <title>Cursos - Rocketseat</title>
    {% endblock %}


    {% block content %}
    <div id="wrapper">
        <h1>Conteúdos</h1>
    </div>

    <section class="cards">

        {% for item in items %}

        <div class="card" id="{{item.id}}">
            <div class="card_image_container" id="s">
                <img src="{{item.img_url}}">
            </div>
            <div class="card_content">
                <p>{{item.name}}</p>
            </div>

            <div class="card_info">
                <p>{{item.qtd_Modules}}</p>
                <p class="card_price">{{item.price}}</p>

            </div>
        </div>

        {% endfor %}
        

    </section>
    
    <footer>
        <ul>
            <li>Endereço da empresa (Residencial Acalanto - R. Guilherme Gemballa, 260 - Sala 3 - Jardim América, Rio do Sul - SC, 89160-188)</li>
            <li>Direitos autorais (Rocketseat © 2020 - Todos os direitos reservados)</li>

        </ul>
    </footer>

    <script src="/scriptConteudo.js"></script>

{% endblock %}
